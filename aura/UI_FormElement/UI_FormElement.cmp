<aura:component abstract="true" extensible="true">
    <aura:attribute name="id" type="string" />
    <aura:attribute name="name" type="string" />
    <aura:attribute name="label" type="string" />
    <aura:attribute name="sublabel" type="string" />
    <aura:attribute name="value" type="object" />
    <aura:attribute name="required" type="boolean" default="false" />
    <aura:attribute name="format" type="string" default="" />
    <aura:attribute name="size" type="integer" />
    <aura:attribute name="placeholder" type="string" />
    <aura:attribute name="validations" type="string" default="" />
    <aura:attribute name="isValid" type="boolean" default="false" />
    <aura:attribute name="disabled" type="Boolean" default="false"/>
    <aura:attribute name="errorMessage" type="string" />

    <div class="{! (v.errorMessage.length > 0 ? 'has-error' : '')}">
	   {!v.body}
    </div>

    <aura:if isTrue="{!v.errorMessage.length > 0}">
        <small class="error">{!v.errorMessage}</small>
    </aura:if>
</aura:component>